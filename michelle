# Constants.
VERSION='1.1.0'

# Functions.
function banner {
  echo "
    Welcome to the command-line interface.

    - Powered by LA Sistemas.
  "

  echo "
    #     #
    ##   ##     #     ####   #    #  ######  #       #       ######
    # # # #     #    #    #  #    #  #       #       #       #
    #  #  #     #    #       ######  #####   #       #       #####
    #     #     #    #       #    #  #       #       #       #
    #     #     #    #    #  #    #  #       #       #       #
    #     #     #     ####   #    #  ######  ######  ######  ######
  "
}

function show_help {
  echo "
    Usage: michelle [command] [options]

    Displays help information.

    Options:

      -h, --help                    Output usage information.
      -v, --version                 Output version of this CLI.

    Commands:
      acp [branch]                  It's a combination of git add ., git commit and git push -u [branch].
  "
}

function acp {
  git add . && git commit && git push -u $1
}


# Process micelle-cli.
if [ -z $1 ]; then
  banner

elif [ -n $1 ] && [ $1 == '-v' ] || [ $1 == '--version' ]; then
  echo $VERSION

elif [ -n $1 ] && [ $1 == 'acp' ] && [ "$2" != '' ]; then
  acp $2

elif [ -n $1 ] && [ $1 == '-h' ] || [ $1 == '--help' ]; then
  show_help

else
  echo "Command not found. run 'michelle -h' for help."
fi

